mixin problems--item (icon, title, text)
	.problems--item&attributes(attributes)
		.problems--item-i: i(class='icon-' + icon)
		.problems--item-t= title
		.problems--item-d!= text

mixin features--col (icon, label, items)
	.features--col&attributes(attributes)
		.features--icon: i(class='icon-' + icon)
		.features--label= label

		ul.features--list
			each item in items
				li= item

mixin believe--item (title, text)
	.believe--item&attributes(attributes)
		.believe--item-t= title
		.believe--item-d= text

mixin team--item (photoID, name, position, twitter, linkedin)
	.team--item&attributes(attributes)
		.team--photo #[i]#[img(src='img/team/item-' + photoID + '.jpg' alt=name)]
		.team--name= name
		.team--position= position
		.team--links
			a(href='https://twitter.com/' + twitter): i.icon-twitter
			a(href='https://linkedin.com/in/' + linkedin): i.icon-linkedin

